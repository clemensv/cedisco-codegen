{%- set uses_protobuf = uses_protobuf | default(true) -%}
{%- set uses_avro = uses_avro | default(true) -%}
{%- set uses_amqp_message = (root | exists( "binding", "amqp" )) %}
{%- set uses_amqp_endpoint = (root | exists("protocol", "amqp" )) %}
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <ProjectName>{{project_name | pascal }}</ProjectName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\{{project_name}}_data\src\{{project_name|pascal}}.csproj" />
  </ItemGroup>
  <ItemGroup>
    {{- dependency( 'cs','net80', 'CloudNative.CloudEvents') }}
    {{- dependency( 'cs','net80', 'CloudNative.CloudEvents.SystemTextJson') }}
    {{- dependency( 'cs','net80', 'CloudNative.CloudEvents.Protobuf') }}
    {{- dependency( 'cs','net80', 'CloudNative.CloudEvents.Avro') }}
    {{- dependency( 'cs','net80', 'System.Memory.Data') }}
    {{- dependency( 'cs','net80', 'AMQPNetLite') }}
    {{- dependency( 'cs','net80', 'CloudNative.CloudEvents.Amqp') }}
    {{- dependency( 'cs','net80', 'Microsoft.Extensions.Logging') }}
  </ItemGroup>
</Project>